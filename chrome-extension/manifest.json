{
  "manifest_version": 3,
  "name": "LeetCode AI Mentor (BYOK)",
  "version": "2.4.1",
  "description": "An AI-powered mentor for LeetCode.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://mentor-backend-drv0.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://leetcode.com/submissions/detail/*"
      ],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "action": { "default_icon": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" } },
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
}