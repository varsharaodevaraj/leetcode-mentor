{
    "manifest_version": 3,
    "name": "LeetCode AI Mentor (BYOK)",
    "version": "2.4",
    "description": "An AI-powered mentor for LeetCode. Provide your own Google Gemini API key.",
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "https://leetcode.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*",
                "https://leetcode.com/submissions/detail/*"
            ],
            "css": ["style.css"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["chart.js"],
            "matches": ["https://leetcode.com/*"]
        }
    ],
    "options_page": "options.html",
    "action": { "default_icon": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" } },
    "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
}